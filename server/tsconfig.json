{
	"compilerOptions": {
		/* Configurações Básicas */
		"target": "es2016",
		"module": "commonjs",
		"moduleResolution": "node",
		"rootDir": "./src",
		"outDir": "./dist",

		/* Interoperabilidade */
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		/* Checagem de Tipos */
		"strict": true,
		"skipLibCheck": true,

		/* A correção do erro está aqui: garantimos que essas flags estejam desligadas ou padrão */
		"verbatimModuleSyntax": false,
		"isolatedModules": false
	}
}
